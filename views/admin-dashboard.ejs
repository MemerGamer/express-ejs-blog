<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="/stylesheets/global.css" />
    <link rel="stylesheet" href="/stylesheets/index.css" />
    <title><%= title %></title>
  </head>

  <body>
    <!-- navbar for the blog with title log in and sign in buttons -->
    <%- include('./components/_navbar') %>

    <div class="profile__posts dashboard__posts">
      <h1>Posts</h1>
      <table>
        <thead>
          <tr>
            <th>Title</th>
            <th>Published at</th>
            <th>Edit</th>
            <th>Delete</th>
          </tr>
        </thead>
        <tbody>
          <!-- option to create new post-->
          <tr>
            <td id="admin__create__new" colspan="4">
              <a href="/create">Create new post ✏️</a>
            </td>
          </tr>

          <% posts.forEach(post => { %>
          <tr>
            <td><a href="/post/<%= post.slug %>"><%= post.title %></a></td>
            <td><%= post.published_at %></td>
            <td class="dashboard__icon__link">
              <a href="/post/<%= post.slug%>/edit">✏️</a>
            </td>
            <td class="dashboard__icon__link">
              <a href="/post/<%= post.slug%>/delete">❌</a>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

    <script src="/javascripts/index.js"></script>
  </body>
</html>
